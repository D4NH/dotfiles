#!/usr/bin/env sh

osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'

# set default layout
yabai -m config layout                          float

# set all padding and gaps
yabai -m config top_padding                     10
yabai -m config bottom_padding                  10
yabai -m config left_padding                    10
yabai -m config right_padding                   10
yabai -m config window_gap                      10

# override layout
# yabai -m config --space 3 layout                bsp
# yabai -m config --space 4 layout                bsp
# yabai -m config --space 5 layout                bsp

# Refresh widget on change - needs SIP disabled
# yabai -m signal --add event=space_changed action="osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'"
# yabai -m signal --add event=display_changed action="osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'"
# yabai -m signal --add event=window_resized action="osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'"
# yabai -m signal --add event=window_focused action="osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'"

echo "yabai configuration loaded.."
