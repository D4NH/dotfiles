### skhd settings for yabai

# change layout of desktop
rcmd + ralt - b : yabai -m space --layout bsp
rcmd + ralt - f : yabai -m space --layout float
rcmd + ralt - m : yabai -m space --layout stack

# rotate tree
rcmd + ralt - r : yabai -m space --rotate 90

# toggle split
ralt - r : yabai -m window --toggle split

# toggle padding
ralt - p : yabai -m space --toggle padding

# equalize size of windows
ralt - e : yabai -m space --balance

# make floating window fill screen
rcmd + ralt - up : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
rcmd + ralt - 0x21 : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
rcmd + ralt - 0x1E : yabai -m window --grid 1:2:1:0:1:1

# make floating window center screen
rcmd + ralt - c : yabai -m window --grid 5:5:1:1:3:3

# focus stack
cmd + shift - 0x0A : yabai -m window --focus stack.prev
cmd - 0x0A : yabai -m window --focus stack.next

# move window
rcmd + ralt - left : yabai -m window --swap west
rcmd + ralt - down : yabai -m window --swap south
rcmd + ralt - up : yabai -m window --swap north
rcmd + ralt - right : yabai -m window --swap east

# send window to monitor
rcmd + ralt - 1 : yabai -m window --display 1; yabai -m display --focus 1; yabai -m window --grid 1:1:0:0:1:1
rcmd + ralt - 2 : yabai -m window --display 2; yabai -m display --focus 2; yabai -m window --grid 1:1:0:0:1:1
